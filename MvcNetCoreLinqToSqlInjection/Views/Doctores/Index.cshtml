@model List<Doctor>

<a asp-controller="Doctores" asp-action="Create" class="btn btn-primary">Crear</a>
<table class="table table-dark">
    <thead>
        <th>Id</th>
        <th>Apellido</th>
        <th>Especialidad</th>
        <th>Salario</th>
        <th>Hospital</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        @if(Model != null)
        {
            @foreach(Doctor doctor in Model)
            {
                <tr>
                    <td>@doctor.IdDoctor</td>
                    <td>@doctor.Apellido</td>
                    <td>@doctor.Especialidad</td>
                    <td>@doctor.Salario</td>
                    <td>@doctor.IdHospital</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Doctores" asp-route-iddoctor="@doctor.IdDoctor" class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Doctores" asp-route-idDoctor="@doctor.IdDoctor" class="btn btn-info">
                            Update
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>